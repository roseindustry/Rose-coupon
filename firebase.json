{
  "functions": {
    "source": "functions",
    "runtime": "nodejs18",
    "region": "us-central1",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ],
    "env": {
      "EMAIL_USER": {
        "description": "Email account for sending notifications",
        "secret": true
      },
      "EMAIL_PASS": {
        "description": "Email account password",
        "secret": true
      }
    }
  }
}